{
  "name": "image-shield",
  "version": "0.8.1",
  "description": "Image fragmentation and restoration.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "workspaces": [
    "packages/*"
  ],
  "files": [
    "dist",
    "packages/*/dist"
  ],
  "scripts": {
    "build": "npm run build --workspaces && tsc -p tsconfig.build.json",
    "build:check": "npm run build:check --workspaces && tsc -p tsconfig.build.json --noEmit",
    "build:typecheck": "npm run build:check --workspaces",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "prepare": "husky",
    "test": "npm run test --workspaces",
    "test:ci": "npm run test --workspaces",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [],
  "author": "tuki0918",
  "repository": {
    "type": "git",
    "url": "https://github.com/tuki0918/image-shield.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^22.10.2",
    "@types/pngjs": "^6.0.5",
    "@vitest/coverage-v8": "^3.1.4",
    "husky": "^9.1.7",
    "typescript": "^5.7.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "@tuki0918/seeded-shuffle": "^1.0.0",
    "jimp": "^1.6.0",
    "@image-shield/core": "file:packages/core",
    "@image-shield/node": "file:packages/node"
  }
}
