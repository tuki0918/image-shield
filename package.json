{
  "name": "image-shield",
  "version": "0.8.0",
  "description": "Image fragmentation and restoration.",
  "main": "dist/index.js",
  "browser": "dist/image-shield-browser.umd.js",
  "module": "dist/image-shield-browser.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": "./dist/image-shield-browser.umd.js",
      "import": "./dist/image-shield-browser.es.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:browser": "vite build --config vite.config.browser.ts",
    "build:all": "npm run build && npm run build:browser",
    "build:check": "tsc -p tsconfig.build.json --noEmit",
    "build:typecheck": "tsc --noEmit",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "prepare": "husky",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [],
  "author": "tuki0918",
  "repository": {
    "type": "git",
    "url": "https://github.com/tuki0918/image-shield.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^22.10.2",
    "@types/pngjs": "^6.0.5",
    "@vitest/coverage-v8": "^3.1.4",
    "husky": "^9.1.7",
    "typescript": "^5.7.2",
    "vite": "^6.0.0",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "jimp": "^1.6.0"
  }
}
