{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@image-shield/core": ["../core/dist"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.test.ts"]
}
